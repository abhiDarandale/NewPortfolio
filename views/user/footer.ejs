<!-- Footer -->
<footer class="footer-section">
    <div class="container">
        <p><%- settings.footer_text %></p>
        <p class="small text-muted mt-2">Passionate Full Stack Developer | Building Web Solutions with Node.js,
            MySQL & JS</p>
    </div>
</footer>

<!-- Certificate Modal -->
<div class="modal fade" id="certificateModal" tabindex="-1" aria-labelledby="certificateModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="certificateModalLabel">Certificate View</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center">
                <img src="" id="modalImage" class="img-fluid" alt="Certificate">
            </div>
        </div>
    </div>
</div>

<!-- Project Modal -->
<div class="modal fade" id="projectModal" tabindex="-1" aria-labelledby="projectModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="projectModalLabel">Project Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <img src="" id="projectModalImage" class="img-fluid mb-3 w-100" alt="Project Image"
                    style="max-height: 400px; object-fit: cover;">
                <p id="projectModalDescription" class="text-secondary"></p>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
<!-- WOW.js -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/wow/1.1.2/wow.min.js"></script>

<script>
    // Certificate Modal Image Update
    const certificateModal = document.getElementById('certificateModal');
    certificateModal.addEventListener('show.bs.modal', function (event) {
        // Button that triggered the modal
        const button = event.relatedTarget;
        // Extract info from data-bs-* attributes
        const imageSrc = button.getAttribute('data-bs-image');
        const title = button.getAttribute('data-bs-title');
        // Update the modal's content.
        const modalTitle = certificateModal.querySelector('.modal-title');
        const modalImage = certificateModal.querySelector('#modalImage');

        modalTitle.textContent = title;
        modalImage.src = imageSrc;
    });

    // Project Modal content update
    const projectModal = document.getElementById('projectModal');
    projectModal.addEventListener('show.bs.modal', function (event) {
        const button = event.relatedTarget;
        const imageSrc = button.getAttribute('data-bs-image');
        const title = button.getAttribute('data-bs-title');
        const description = button.getAttribute('data-bs-description');

        const modalTitle = projectModal.querySelector('.modal-title');
        const modalImage = projectModal.querySelector('#projectModalImage');
        const modalDesc = projectModal.querySelector('#projectModalDescription');

        modalTitle.textContent = title;
        modalImage.src = imageSrc;
        modalDesc.textContent = description;
    });
</script>


</body>

</html>