<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Manage Education</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="bg-light">
    <div class="container mt-5">
        <a href="/admin/dashboard" class="btn btn-secondary mb-3">&larr; Back to Dashboard</a>
        <h2>Manage Education</h2>

        <div class="card mb-4">
            <div class="card-header">Add Education</div>
            <div class="card-body">
                <form action="/admin/add_education" method="POST">
                    <div class="mb-3">
                        <label>Degree/Course</label>
                        <input type="text" name="degree" class="form-control" required>
                    </div>
                    <div class="mb-3">
                        <label>Institute/College</label>
                        <input type="text" name="institute" class="form-control" required>
                    </div>
                    <div class="mb-3">
                        <label>Year Range</label>
                        <input type="text" name="year_range" class="form-control" placeholder="2023 - 2026">
                    </div>
                    <div class="mb-3">
                        <label>CGPA/Grade</label>
                        <input type="text" name="cgpa" class="form-control" placeholder="CGPA: 8.36">
                    </div>
                    <button type="submit" class="btn btn-primary">Add Education</button>
                </form>
            </div>
        </div>

        <h3>Existing Education</h3>
        <table class="table table-bordered bg-white">
            <thead>
                <tr>
                    <th>Degree</th>
                    <th>Institute</th>
                    <th>Year</th>
                    <th>CGPA</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% education.forEach(function(edu) { %>
                    <tr>
                        <td>
                            <%= edu.degree %>
                        </td>
                        <td>
                            <%= edu.institute %>
                        </td>
                        <td>
                            <%= edu.year_range %>
                        </td>
                        <td>
                            <%= edu.cgpa %>
                        </td>
                        <td>
                            <a href="/admin/delete_education/<%= edu.id %>" class="btn btn-danger btn-sm"
                                onclick="return confirm('Are you sure?')">Delete</a>
                        </td>
                    </tr>
                    <% }); %>
            </tbody>
        </table>
    </div>
</body>

</html>