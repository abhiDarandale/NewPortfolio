<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Manage Certifications</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="bg-light">
    <div class="container mt-5">
        <a href="/admin/dashboard" class="btn btn-secondary mb-3">&larr; Back to Dashboard</a>
        <h2>Manage Certifications</h2>

        <div class="card mb-4">
            <div class="card-header">Add New Certification</div>
            <div class="card-body">
                <form action="/admin/add_certification" method="POST" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label>Title</label>
                        <input type="text" name="title" class="form-control" required>
                    </div>
                    <div class="mb-3">
                        <label>Organization</label>
                        <input type="text" name="organization" class="form-control" required>
                    </div>
                    <div class="mb-3">
                        <label>Issue Date</label>
                        <input type="text" name="issue_date" class="form-control" placeholder="January 2025" required>
                    </div>
                    <div class="mb-3">
                        <label>Image</label>
                        <input type="file" name="image_path" class="form-control" accept="image/*" required>
                    </div>
                    <button type="submit" class="btn btn-primary">Add Certification</button>
                </form>
            </div>
        </div>

        <h3>Existing Certifications</h3>
        <table class="table table-bordered bg-white">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Title</th>
                    <th>Org</th>
                    <th>Date</th>
                    <th>Image</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% certifications.forEach(function(cert) { %>
                    <tr>
                        <td>
                            <%= cert.id %>
                        </td>
                        <td>
                            <%= cert.title %>
                        </td>
                        <td>
                            <%= cert.organization %>
                        </td>
                        <td>
                            <%= cert.issue_date %>
                        </td>
                        <td>
                            <img src="<%= cert.image_path %>" style="width: 50px; height: auto;">
                        </td>
                        <td>
                            <a href="/admin/delete_certification/<%= cert.id %>" class="btn btn-danger btn-sm"
                                onclick="return confirm('Are you sure?')">Delete</a>
                        </td>
                    </tr>
                    <% }); %>
            </tbody>
        </table>
    </div>
</body>

</html>