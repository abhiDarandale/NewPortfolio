<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Manage Projects</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="bg-light">
    <div class="container mt-5">
        <a href="/admin/dashboard" class="btn btn-secondary mb-3">&larr; Back to Dashboard</a>
        <h2>Manage Projects</h2>

        <div class="card mb-4">
            <div class="card-header">Add New Project</div>
            <div class="card-body">
                <form action="/admin/add_project" method="POST" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label>Project Title</label>
                        <input type="text" name="title" class="form-control" required>
                    </div>
                    <div class="mb-3">
                        <label>Short Description</label>
                        <textarea name="description" class="form-control" rows="2" required></textarea>
                    </div>
                    <div class="mb-3">
                        <label>Full Description (for Modal)</label>
                        <textarea name="full_description" class="form-control" rows="4"></textarea>
                    </div>
                    <div class="mb-3">
                        <label>Project Link (Optional)</label>
                        <input type="text" name="link" class="form-control" placeholder="#">
                    </div>
                    <div class="mb-3">
                        <label>Project Image</label>
                        <input type="file" name="image_path" class="form-control" accept="image/*" required>
                    </div>
                    <button type="submit" class="btn btn-primary">Add Project</button>
                </form>
            </div>
        </div>

        <h3>Existing Projects</h3>
        <table class="table table-bordered bg-white">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Image</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% projects.forEach(function(proj) { %>
                    <tr>
                        <td>
                            <%= proj.title %>
                        </td>
                        <td>
                            <%= proj.description %>
                        </td>
                        <td>
                            <img src="<%= proj.image_path %>" style="width: 50px; height: auto;">
                        </td>
                        <td>
                            <a href="/admin/delete_project/<%= proj.id %>" class="btn btn-danger btn-sm"
                                onclick="return confirm('Are you sure?')">Delete</a>
                        </td>
                    </tr>
                    <% }); %>
            </tbody>
        </table>
    </div>
</body>

</html>