<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Manage Experience</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="bg-light">
    <div class="container mt-5">
        <a href="/admin/dashboard" class="btn btn-secondary mb-3">&larr; Back to Dashboard</a>
        <h2>Manage Experience</h2>

        <div class="card mb-4">
            <div class="card-header">Add Experience</div>
            <div class="card-body">
                <form action="/admin/add_experience" method="POST">
                    <div class="mb-3">
                        <label>Role/Position</label>
                        <input type="text" name="role" class="form-control" required>
                    </div>
                    <div class="mb-3">
                        <label>Company</label>
                        <input type="text" name="company" class="form-control" required>
                    </div>
                    <div class="mb-3">
                        <label>Duration</label>
                        <input type="text" name="duration" class="form-control" placeholder="January 2026 - Present">
                    </div>
                    <div class="mb-3">
                        <label>Description</label>
                        <textarea name="description" class="form-control" rows="2"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Add Experience</button>
                </form>
            </div>
        </div>

        <h3>Existing Experience</h3>
        <table class="table table-bordered bg-white">
            <thead>
                <tr>
                    <th>Role</th>
                    <th>Company</th>
                    <th>Duration</th>
                    <th>Description</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% experience.forEach(function(exp) { %>
                    <tr>
                        <td>
                            <%= exp.role %>
                        </td>
                        <td>
                            <%= exp.company %>
                        </td>
                        <td>
                            <%= exp.duration %>
                        </td>
                        <td>
                            <%= exp.description %>
                        </td>
                        <td>
                            <a href="/admin/delete_experience/<%= exp.id %>" class="btn btn-danger btn-sm"
                                onclick="return confirm('Are you sure?')">Delete</a>
                        </td>
                    </tr>
                    <% }); %>
            </tbody>
        </table>
    </div>
</body>

</html>